<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="rtoasaS3B.Page2">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="labelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="TextColor" Value="Fuchsia"/>
                <Setter Property="HorizontalTextAlignment" Value="End"/>
            </Style>
            
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Style="{StaticResource stackLayoutStyle}">
            <Label Text="ESTILO DOS" Style="{StaticResource labelStyle}"/>
            <Label x:Name="lblDatoUno" Style="{StaticResource labelStyle}"/>
            <Entry x:Name="txtDatoDos" IsReadOnly="True"></Entry>
            <Button x:Name="btnAbrir" Text="Abrir ventana 3" Clicked="btnAbrir_Clicked"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>